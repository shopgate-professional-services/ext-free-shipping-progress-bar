{
  "version": "1.0.0",
  "id": "@shopgate-project/free-shipping-progress-bar",
  "components": [
    {
      "id": "FreeShippingProgressBar",
      "type": "portals",
      "path": "frontend/components/FreeShippingProgressBar",
      "target": "cart.item-list.before"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/fr-FR.json",
      "id": "locale/fr-FR"
    },
    {
      "type": "translations",
      "path": "frontend/locale/es-ES.json",
      "id": "locale/es-ES"
    },
    {
      "type": "translations",
      "path": "frontend/locale/it-IT.json",
      "id": "locale/it-IT"
    }
  ],
  "configuration": {
    "freeShippingFrom": {
      "type": "admin",
      "destination": "frontend",
      "default": 0.0,
      "params": {
        "required": true,
        "type": "number",
        "label": "Amount to reach the free shipping"
      }
    },
    "outerColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "#000",
      "params": {
        "required": true,
        "type": "string",
        "label": "Bar outer color"
      }
    },
    "innerColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "#fff",
      "params": {
        "required": true,
        "type": "string",
        "label": "Bar inner color"
      }
    }
  }
}
